<script>

/* Stars */
for(let i=0;i<100;i++){
  let star=document.createElement("div");
  star.className="star";
  star.style.top=Math.random()*100+"%";
  star.style.left=Math.random()*100+"%";
  document.body.appendChild(star);
}

/* Boot animation */
const bootMessage =
"System Initializing...\n"+
"Loading Modules...\n"+
"Verifying User Profile...\n"+
"Checking Network Status...\n"+
"Access Granted.\n";

let b=0;
function boot(){
  if(b<bootMessage.length){
    document.getElementById("bootText").innerHTML+=bootMessage.charAt(b);
    b++;
    setTimeout(boot,35);
  }else{
    setTimeout(()=>{
      document.getElementById("boot").classList.add("hidden");
      document.getElementById("unlock").classList.remove("hidden");
    },1200);
  }
}
boot();

/* Unlock */
let started=false;
function checkName(){
  let name=document.getElementById("nameInput").value.trim().toLowerCase();
  if(name==="drakon"){
    document.getElementById("unlock").classList.add("hidden");
    document.getElementById("gift").classList.remove("hidden");
    document.getElementById("music").play();
    if(!started){started=true;typeMessage();}
  }else{
    document.getElementById("error").innerText="Identity not recognized ‚ùå";
  }
}

/* Typing message */
const msg=`Today is more than a birthday.

It celebrates vision, growth, and unstoppable ambition.

Emmanuel ‚Ä¢ Praise ‚Ä¢ Sunbola

Your career is ascending.
Inspiration will find you.
Motivation fuels your every step.

Your dreams will soon become reality.

Keep conquering, Drakon. ü•Ç‚ú®`;

let i=0;
function typeMessage(){
  if(i<msg.length){
    document.getElementById("message").innerHTML+=msg.charAt(i);
    i++;
    setTimeout(typeMessage,30);
  } else {
    setTimeout(()=>{
      document.getElementById("perks").classList.remove("hidden");
    },500);
  }
}

</script>
